{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es7",
         "es2015",
         "es2016",
         "es2017",
         "es2018",
         "esnext"
       ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "typeRoots": [
         "node_modules/@types"
      ],
      "types": [
         "reflect-metadata"
      ],
      "esModuleInterop": true
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}